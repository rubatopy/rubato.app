---
layout: default
---

{% assign post_date = page.date | date: "%Y-%m-%d" %}
{% assign post_cover = site.static_files | where: "cover", true | where: "basename", post_date | first %}

<div class="container-fluid">
    <div class="row">
        <div class="col"></div>
        <div class="col-sm-7 p-md-5 px-sm-3 mb-2 text-white rounded-3" style="background-color: #19191a">
            <img src="{{ post_cover.path }}" class="w-75 d-block mx-auto mb-5" />
            <h1 class="display-4 fw-bold">{{ page.title }}</h1>
            {% if page.subtitle %}
                <h2 class="text-secondary">{{ page.subtitle }}</h2>
            {% endif %}
            {% assign author = site.data.authors[page.author] %}
            <div>
                {% if author %}
                    <strong>by {{ author.name }}</strong>
                {% else %}
                    published
                {% endif %}on {{ page.date | date_to_string: "ordinal", "US" }}
            </div>
            <div class="mt-3">{{ content }}</div>
        </div>
        <div class="col"></div>
    </div>
</div>
